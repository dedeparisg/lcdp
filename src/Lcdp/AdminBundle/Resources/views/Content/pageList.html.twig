{% extends "LcdpAdminBundle::layout.html.twig" %}

{% block breadcrumb %}
    <li><a href="{{ path('lcdp_admin_homepage') }}">Accueil</a></li>
    <li>Gestion de contenus</li>
    <li class="active">Pages statiques</li>
{% endblock %}
    
{% block content %}
    
    <div class="row">
        {% include 'LcdpAdminBundle:Partial:form_filters.html.twig' with {
            'filter_title': 'Gestion des pages statiques',
            'filter_url': path('lcdp_admin_page_edit'),
            'filter_button': 'Ajouter une page'
        } %}
        
        <div class="clear"></div>

        <div class="col-md-12">
            <table class="table table-bordered table-striped">
                <thead>
                    <tr class="gray">
                        <th>Titre</th>
                        <th>Section</th>
                        <th>Publié</th>
                        <th>Date de publication</th>
                        <th>Edit.</th>
                        <th>Supp.</th>
                    </tr>
                </thead>
                <tbody>
                    {% for page in pages %}
                        <tr class="{% if loop.index % 2 %}odd{% endif %}">
                            <td>{{ page.title }}</td>
                            <td>{{ refSectionsLabel[page.section] }}</td>
                            <td>{{ page.isPublished }}</td>
                            <td>{{ page.publicatedAt|date('d-m-Y \\à H:i:s') }}</td>
                            <td>
                                <a href="{{ path('lcdp_admin_page_edit', {'id': page.id}) }}">
                                    <img src="{{ asset('bundles/lcdpadmin/images/picto_editer.png') }}" title="Editer la page"/>
                                </a>
                            </td>
                            <td>
                                {% if page.canBeDeleted%}
                                    <a href="{{ path('lcdp_admin_content_soft_delete', {'content': 'Page','id': page.id}) }}" onclick="return confirm('Souhaitez-vous supprimer cette page ?');">
                                        <img src="{{ asset('bundles/lcdpadmin/images/picto_supprimer.png') }}" title="Supprimer la page" class="hand" />
                                    </a>
                                {% endif %}
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

{% endblock %}
    