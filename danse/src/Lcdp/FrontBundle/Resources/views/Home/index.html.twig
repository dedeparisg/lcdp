{% extends "LcdpFrontBundle::layout.html.twig" %}

{% block content %}
    <h2>Actualit√©s</h2>
    {% for child in news %}
        <div class="row margin-bottom-lg news">
            <div class="col-xs-4">
                <img src="http://fakeimg.pl/200x200/" width="200" height="200"/>
            </div>
            <div class="col-xs-8">
                <h3 class="col-xs-12">{{ child.title }}</h3>
                <div class="col-xs-12 date">{{ child.createdAt|date }}</div>
                <div class="col-xs-12">{{ child.intro|raw }}</div>
                <a class="btn-xs btn-gray btn pull-right margin-top" href="{{ path('front_news', {'slug': child.slug}) }}">> En savoir plus...</a>
            </div>
            <div class="col-xs-12">
                <span class="separator"></span>
            </div>
        </div>
    {% endfor %}

    {{ include('LcdpFrontBundle:Components:paginate.html.twig') }}
{% endblock %}
