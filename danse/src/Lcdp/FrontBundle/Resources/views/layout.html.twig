{% extends "::base.html.twig" %}

{% block body %}
    <div id="wrapper" class="clearfix">
        <header id="header">
            <div class="row">
                <div class="col-md-9">
                    <div class="col-xs-12">
                        <h1 title="Le club des pâquerettes, tous ensemble !">
                            <img src="{{ asset('bundles/lcdpfront/img/intro.jpg') }}" style="width:100%"
                                 alt="Le club des pâquerettes, tous ensemble !"/>
                            {#<span class="intro"></span>#}
                        </h1>
                    </div>
                    <div class="col-sm-12 hidden-xs">
                        <img src="{{ asset('bundles/lcdpcommon/images/banniere_V01.png') }}" style="width:100%"
                             alt="Bannère du site"/>
                    </div>
                </div>

                <div class="col-md-3  hidden-xs hidden-sm">
                    <a href="{{ path('homepage') }}" title="Le club des pâquerettes" rel="Page d'acceuil">
                        <img src="{{ asset('bundles/lcdpcommon/images/logo/LCDP_degrade.png') }}"
                             alt="Logo : Le club des paquerêttes" title="Page d'accueil" class="logo-home col-xs-12"/>
                    </a>
                    <h2 class="hidden-md">Enfants, ados, adultes, seniors</h2>
                </div>
            </div>
        </header>

        <div id="main" class="row">
            <div class="col-md-3">
                {{ render(controller('LcdpFrontBundle:Home:menuLeft')) }}
            </div>

            <div class="col-md-9">
                <div class="row">
                    <div class="menu-top col-xs-12">
                        {% include 'LcdpFrontBundle:Components:menu-top.html.twig' %}
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-8">
                        {% include 'LcdpFrontBundle:Components:breadcrumb.html.twig' %}

                        <div class="row col-xs-no-margin">
                            <div id="center-content" class="bulle">
                                {% block content %}{% endblock %}
                            </div>
                        </div>

                        <div class="hidden-sm">
                            {% include 'LcdpFrontBundle:Components:menu-bottom.html.twig' %}
                        </div>
                    </div>

                    <div class="col-md-4 hidden-xs">
                        {{ render(controller('LcdpFrontBundle:Home:menuRight')) }}
                    </div>
                </div>

                <div class="hidden-xs hidden-md hidden-lg">
                    {% include 'LcdpFrontBundle:Components:menu-bottom.html.twig' %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent () }}
    <script>
        $('.home-gallery #lightSlider').lightSlider({
            gallery: false,
            item: 1,
            loop: true,
            slideMargin: 0,
            speed: 2500,
            auto: true,
            mode: 'fade',
            pause: 5000
        });
    </script>
{% endblock %}
