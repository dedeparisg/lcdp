{% extends "LcdpAdminBundle::layout.html.twig" %}

{% block content %}
    <div class="options">
        <a href="{{ path('lcdp_admin_content_static_edit') }}">Ajouter une page</a>
    </div>
    
    <div class="tableau">
        <table class="persons-table" width="100%" cellpadding="0" cellspacing="0" border="0">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Derni√®re modification</th>
                    <th>Edit.</th>
                </tr>
            </thead>
            <tbody>
                {% for page in pages %}
                    <tr class="{% if loop.index % 2 %}odd{% endif %}">
                        <td>{{ page.title }}</td>
                        <td>{{ page.modifiedAt|date('d-m-Y') }}</td>
                        <td><a href="{{ path('lcdp_admin_content_static_edit', {'id': page.id}) }}">edit</a></td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}
    